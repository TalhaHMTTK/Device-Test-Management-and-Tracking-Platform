<h1>Home#index</h1>
<p>This is your home page. You can navigate to other sections from here.</p>
<% if !user_signed_in? %>
  <%= link_to 'Sign In', new_user_session_path %> |
  <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>

<% if user_signed_in? %>
  <% if current_user == true_user %>
    <%= button_to "sign Out", destroy_user_session_path, method: :delete %>
  <% end %>
  <div>
    <%= link_to "Company Dashboard" , users_path %>
  </div>
<%end%>

<% if current_user != true_user %>
  You (<%= true_user.email %>) are signed in as <%= current_user.email %>
  <%= button_to "Back to admin", stop_impersonating_users_path, data: {turbo: false} %>
<% end %>

