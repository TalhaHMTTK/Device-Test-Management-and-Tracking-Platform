<h3>Edit Device</h3>

<%= form_with(model: @device, local: true) do |form| %>

  <%= render 'shared/errors', object: @device %>
  
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :manufacturer %>
    <%= form.text_field :manufacturer %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.select :model, options_for_select(Device.models.keys.map { |k| [k.capitalize, k] }, @device.model) %>
  </div>

  <div class="actions">
    <%= form.submit "Edit Device" %>
  </div>
<% end %>
