<%= form_with(model: device, local: true) do |form| %>

  <%= turbo_frame_tag "all_errors" %>
  
  <div class="field">
    <%= form.label :device_type %>
    <%= form.select :device_type, options_for_select(Device.device_types.keys.map { |k| [k.humanize.capitalize, k] }, @device.device_type) %>
  </div>

  <div class="field">
    <%= form.label :manufacturer %>
    <%= form.text_field :manufacturer %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.select :model, options_for_select(Device.models.keys.map { |k| [k.capitalize, k] }, @device.model) %>
  </div>

  <div class="field">
    <%= form.label :max_flow %>
    <%= form.number_field :max_flow, step: 0.01  %>
  </div>

  <div class="field">
    <%= form.label :max_pressure %>
    <%= form.number_field :max_pressure, step: 0.01  %>
  </div>

  <%= form.hidden_field :location_id, value: device.location_id %>

  <%= form.hidden_field :company_id, value: current_user.company_id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
