<div class="card">
  <div class="card-header text-center">
    <h3>Location's Info</h3>
  </div>
  <div class="card-body">
    <p class="card-text">ID: <%= @location.id %></p>
    <p class="card-text">Name: <%= @location.name %></p>
    <p class="card-text">Phone: <%= @location.address %></p>
    <p class="card-text">Address: <%= @location.contact_person %></p>
  </div>
</div>

<h4 class="text-center">Devices on <%= @location.name %></h4>

<table class="table mt-2">
  <thead class="bg-secondary">
    <tr>
      <th>ID</th>
      <th>Type</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Max Flow</th>
      <th>Max Pressure</th>
      <th class="text-center" style="width: 20%">Actions</th>
    </tr>
  </thead>
  <tbody id="devices">
    <%= render @location.devices %>
  </tbody>
</table>

<%= turbo_frame_tag "new_device" do %>
  <div class="d-flex justify-content-center">
    <%= link_to 'Add Device', new_device_path(location_id: @location.id), class: "btn btn-primary" %>
  </div>
<% end %>

