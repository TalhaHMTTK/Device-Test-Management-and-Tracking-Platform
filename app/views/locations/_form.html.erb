<%= form_with(model: location, local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <%= form.hidden_field :customer_id, value: location.customer_id %>
  
  <%= form.hidden_field :company_id, value: current_user.company_id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
