<h3>New Customer</h3>

<%= form_with(model: @customer, local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <%= form.hidden_field :company_id, value: current_user.company_id %>

  <div class="actions">
    <%= form.submit "Create Customer" %>
  </div>
<% end %>
