<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Modernize Free</title>
</head>

<body>
  <div class="card-body">
    <%= form_with(model: customer, local: true) do |form| %>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Name</label>
          <%= form.text_field :name, class: "form-control", id: "exampleInputText1" %>
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Phone</label>
          <%= form.text_field :phone, class: "form-control", id: "exampleInputText1" %>
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Address</label>
          <%= form.text_field :address, class: "form-control", id: "exampleInputText1" %>
        </div>
        <%= form.hidden_field :company_id, value: current_user.company_id %>
        <%= form.submit class: "btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2" %>
    <% end %>
  </div>
</body>

</html>
