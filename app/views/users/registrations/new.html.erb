<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
  data-sidebar-position="fixed" data-header-position="fixed">
  <div
    class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
    <div class="d-flex align-items-center justify-content-center w-100">
      <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-6 col-xxl-3">
          <div class="card mb-0">
            <div class="card-body">
              <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                <%= image_tag 'logos/dark-logo.svg', width: 180, alt: '' %>
              </a>
              <p class="text-center">Device Test & Management</p>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>
                <form>
                  <div class="mb-3">
                    <label for="exampleInputtext1" class="form-label">First Name</label>
                    <%= f.text_field :first_name, autofocus: true, class: "form-control", id: "exampleInputtext1", 'aria-describedby': "textHelp"  %>
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputtext1" class="form-label">Last Name</label>
                    <%= f.text_field :last_name, autofocus: true, class: "form-control", id: "exampleInputtext1", 'aria-describedby': "textHelp"  %>
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email Address</label>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleInputEmail1", 'aria-describedby': "emailHelp" %>
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputtext1" class="form-label">Address</label>
                    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control", id: "exampleInputtext1", 'aria-describedby': "textHelp"  %>
                  </div>
                  <div class="mb-4">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "exampleInputPassword1" %>
                  </div>
                  <div class="mb-4">
                    <label for="exampleInputPassword1" class="form-label">Password Confirmation</label>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "exampleInputPassword1" %>
                  </div>
                  <p class="text-center fw-bold">Company Details</p>
                  <%= f.fields_for :company do |company_fields| %>
                  <div class="mb-3">
                    <label for="exampleInputtext1" class="form-label">Company Name</label>
                    <%= company_fields.text_field :name, autofocus: true, class: "form-control", id: "exampleInputtext1", 'aria-describedby': "textHelp"  %>
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputtext1" class="form-label">Contact Details</label>
                    <%= company_fields.text_field :phone, autofocus: true, class: "form-control", id: "exampleInputtext1", 'aria-describedby': "textHelp"  %>
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputtext1" class="form-label">Address</label>
                    <%= company_fields.text_field :address, autofocus: true, class: "form-control", id: "exampleInputtext1", 'aria-describedby': "textHelp"  %>
                  </div>  
                  <% end %>
                  <%= f.submit "Sign Up", class: "btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2" %>
                  <div class="d-flex align-items-center justify-content-center">
                    <p class="fs-4 mb-0 fw-bold">Already have an Account?</p>
                    <%= link_to "Sign In", new_session_path(resource_name), class: "text-primary fw-bold ms-2" %>
                  </div>
                </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
